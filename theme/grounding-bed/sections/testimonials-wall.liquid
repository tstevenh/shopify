{% comment %}
  TESTIMONIALS WALL (manual for now)
  Later we can swap to Loox/Judge.me widgets.
{% endcomment %}

<section class="testimonials-wall color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="title">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="testimonials-wall__grid">
      {% for block in section.blocks %}
        <figure class="testimonials-wall__card" {{ block.shopify_attributes }}>
          <div class="testimonials-wall__stars" aria-label="{{ block.settings.stars }} out of 5 stars">
            {% for i in (1..5) %}
              <span class="testimonials-wall__star">{% if i <= block.settings.stars %}★{% else %}☆{% endif %}</span>
            {% endfor %}
          </div>

          <blockquote class="testimonials-wall__quote rte">{{ block.settings.quote }}</blockquote>

          <figcaption class="testimonials-wall__meta">
            <strong>{{ block.settings.name | escape }}</strong>
            {% if block.settings.detail != blank %}
              <span class="testimonials-wall__detail">{{ block.settings.detail | escape }}</span>
            {% endif %}
          </figcaption>
        </figure>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials wall",
  "settings": [
    {"type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "background-2"},
    {"type": "text", "id": "heading", "label": "Heading", "default": "Real people. Real sleep."}
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {"type": "range", "id": "stars", "label": "Stars", "min": 1, "max": 5, "step": 1, "default": 5},
        {"type": "richtext", "id": "quote", "label": "Quote", "default": "<p>From the first night, the difference was amazing.</p>"},
        {"type": "text", "id": "name", "label": "Name", "default": "Sarah"},
        {"type": "text", "id": "detail", "label": "Detail", "default": "Verified buyer"}
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Testimonials wall",
      "blocks": [
        {"type": "testimonial", "settings": {"stars": 5, "quote": "<p>Immediate & impactful results — we slept deeper and woke up less.</p>", "name": "Debra C.", "detail": "Age 60"}},
        {"type": "testimonial", "settings": {"stars": 5, "quote": "<p>Absolute game changer. My aches are almost gone and I wake up energized.</p>", "name": "Rosie P.", "detail": "Verified buyer"}},
        {"type": "testimonial", "settings": {"stars": 5, "quote": "<p>I don’t wake up with lower back pain anymore. Everyone should own one.</p>", "name": "Sarah", "detail": "Verified buyer"}}
      ]
    }
  ]
}
{% endschema %}
